{% extends ':admin:base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 text-left">
            Total Count : {{ pagination.getTotalItemCount }}
        </div>
        <div class="col-md-6 text-right">
            <a class="btn btn-success" href="{{ url('create_category') }}">Create Category</a>
        </div>
    </div>


    <table class="table table-striped">
        <thead>
        <tr>
            <th class="col-md-1">{{ knp_pagination_sortable(pagination, 'Id', 'category.id') }}</th>
            <th class="col-md-9">{{ knp_pagination_sortable(pagination, 'name', 'category.name') }}</th>
            <th class="col-md-2 text-right">Actions</th>
        </tr>
        </thead>
        <tbody>
        {# table body #}
        {% for category in pagination %}
            <tr {% if loop.index is odd %}class="color"{% endif %}>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td class="text-right">
                    <a class="text-warning" href="{{ url('edit_category', {id: category.id}) }}">Edit</a> |
                    <a class="text-danger" href="{{ url('delete_category', {id: category.id}) }}">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock body %}

